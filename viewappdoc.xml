<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/logo">

    <!-- Barre de titre -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Check_ListR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Barre de recherche -->
    <EditText
        android:id="@+id/searchAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_appointments"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Liste des rendez-vous -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/appointmentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Les rendez-vous seront affichÃ©s ici dynamiquement -->
        </LinearLayout>
    </ScrollView>

    <!-- Bouton Retour -->
    <Button
        android:id="@+id/buttonBackdoc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_interdoc"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
