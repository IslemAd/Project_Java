<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bleug"
    android:gravity="center_horizontal">

    <!-- Titre principal -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medic_app"
        android:textAlignment="center"
        android:textColor="@color/green3"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/logo2"
        android:layout_marginBottom="32dp" />

    <!-- Nom d'utilisateur -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/Emailsigninsec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/entre_name"
        android:layout_marginBottom="16dp" />

    <!-- Mot de passe -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/Passwordsigninsec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/entre_password"
        android:layout_marginBottom="24dp" />

    <!-- Bouton Sign In -->
    <Button
        android:id="@+id/btnsec2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bleu_in"
        android:text="@string/sign_in"
        android:textSize="24sp"
        android:textColor="@color/white" />
</LinearLayout>
